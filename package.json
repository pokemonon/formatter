{
    "name": "formatter",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@changesets/cli": "^2.23.0",
        "@vitesite/vitedoc-core": "^0.0.0-beta.10",
        "lerna": "^3.21.0",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^6.0.0",
        "standard-version": "^9.3.0"
    },
    "scripts": {
        "clean": "lerna clean -y && rm -rf node_modules",
        "dev:docs": "vitedoc dev",
        "build:docs": "vitedoc build --outDir dist",
        "bump": "HUSKY=0 changeset && changeset version",
        "release": "changeset publish",
        "husky": "husky install"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}